{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"all"
			],
			"group": "build",
			"problemMatcher": [],
			"detail": "CMake template build task"
		},
		{
			"type": "cppbuild",
			"label": "Сборка файла",
			"command": "C:/MinGW/bin/gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/*.c",
				"${workspaceFolder}/matrix/*.c",
				"-o",
				"${workspaceFolder}/build/test_matrix.exe"
				//"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "компилятор: C:/MinGW/bin/gcc.exe"
		}
	]
}